<%= simple_form_for(@funcionario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :sobrenome %>
    <%= f.input :endereco %>
    <%= f.input :bairro %>
    <%= f.input :complemento %>
    <%= f.input :cep %>
    <%= f.input :cidade %>
    <%= f.input :estado %>
    <%= f.input :telefone %>
    <%= f.input :celular %>
    <%= f.input :email %>
    <%= f.input :rg %>
    <%= f.input :cargo %>
    <%= f.input :data_admissao, :as => :string, :input_html => {:value => Date.today.strftime('%d/%m/%Y'), :class =>"datepicker"}, :label => "Data de admissão: " %>
    <%= f.input :data_demissao, :as => :string, :input_html => {:value => Date.today.strftime('%d/%m/%Y'), :class =>"datepicker"}, :label => "Data de demissão: " %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
