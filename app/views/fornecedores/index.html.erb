<div class="row">
    <div class="span10">
        <h1>Fornecedores</h1>
    </div>
    <% if can? :create, Fornecedor %>
      <div class="span2">
          <%= link_to new_fornecedor_path, :class => "btn btn-primary btn-novo" do %>
              <i class="icon-plus icon-white"></i>
              <b><%= "Fornecedor" %></b>
          <% end %>
      </div>
    <% end %>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Nome</th>
    <th>Telefone</th>
    <th>Observação</th>
    <th>Tipo</th>
    <th>Ações</th>
    <% if can? :update, Fornecedor %>
      <th class="sem-borda-esquerda"></th>
    <% end %>
    <% if can? :destroy, Fornecedor %>
      <th class="sem-borda-esquerda"></th>
    <% end %>
  </tr>

<% @fornecedores.each do |fornecedor| %>
  <tr>
    <td><%= fornecedor.nome %></td>
    <td><%= fornecedor.telefone %></td>
    <td><%= fornecedor.observacao %></td>
    <td><%= Fornecedor::TIPOS[fornecedor.tipo] %></td>
    <td class="botao-acao primeiro-botao">
        <%= link_to fornecedor, :class => "btn btn-mini" do %>
        <i class="icon-eye-open"></i>
        <%= "Mostrar" %>
        <% end %>
    </td>
    
    <% if can? :update, Fornecedor %>
      <td class="botao-acao sem-borda-esquerda">
          <%= link_to edit_fornecedor_path(fornecedor), :class => "btn btn-info btn-mini" do %>
          <i class="icon-pencil icon-white"></i>
          <%= "Editar" %>
          <% end %>
      </td>
    <% end %>
    
    <% if can? :destroy, Fornecedor %>
      <td class="botao-acao sem-borda-esquerda">
          <%= link_to fornecedor, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir este Fornecedor?' }, :class => "btn btn-danger btn-mini" do %>
          <i class="icon-trash icon-white"></i>
          <%= "Excluir" %>
          <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
</table>
<div class="span12">
    <%= paginate @fornecedores %>
</div>