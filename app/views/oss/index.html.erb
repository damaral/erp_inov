<h1>Ordens de Serviço</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Código</th>
    <th>Cliente</th>
    <th>Previsão entrega</th>
    <th>Valor total</th>
    <th>Estado</th>
    <th>Pagamento</th>
    <th></th>
    <th class="sem-borda-esquerda">Ações</th>
    <th class="sem-borda-esquerda"></th>
  </tr>

<% @oss.each do |os| %>
  <tr>
    <td><%= os.id %></td>
    <td><%= os.cliente.nome %></td>
    <td><%= os.previsao_entrega.strftime('%d/%m/%Y') %></td>
    <td><%= number_to_currency os.valor_total %></td>
    <td><%= Os::ESTADOS[os.estado] %></td>
    <td><% if os.esta_pago %>
          <span class="label label-success">OK</span>
          <% else %>
          <span class="label label-warning">Pendente</span>
          <% end %></td>
    <td class="botao-acao primeiro-botao">
        <%= link_to os, :class => "btn btn-mini" do %>
        <i class="icon-eye-open"></i>
        <%= "Mostrar" %>
        <% end %>
    </td>
    <td class="botao-acao sem-borda-esquerda">
        <%= link_to edit_os_path(os), :class => "btn btn-info btn-mini" do %>
        <i class="icon-pencil icon-white"></i>
        <%= "Editar" %>
        <% end %>
    </td>
    <td class="botao-acao sem-borda-esquerda">
        <%= link_to os, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir esta O.S.?' }, :class => "btn btn-danger btn-mini" do %>
        <i class="icon-trash icon-white"></i>
        <%= "Excluir" %>
        <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova O.S.', new_os_path, :class => "btn btn-primary" %>
