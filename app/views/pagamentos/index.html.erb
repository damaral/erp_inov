<h1>Listing pagamentos</h1>

<table class="table table-striped">
  <tr>
    <th>Valor</th>
    <th>Forma de pagamento</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pagamentos.each do |pagamento| %>
  <tr>
    <td><%= pagamento.valor %></td>
    <td><%= pagamento.forma_de_pagamento %></td>
    <td><%= link_to 'Show', pagamento %></td>
    <td><%= link_to 'Edit', edit_pagamento_path(pagamento) %></td>
    <td><%= link_to 'Destroy', pagamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

