<%= simple_form_for(@pagamento, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :os_id, :as => :string, :readonly => true, :label => "Código O.S.: " %>  
    <%= f.input :forma_de_pagamento, :collection => Pagamento::FORMAS_PGTO, :include_blank => false, :label => "Forma de Pagamento: " %>
    <%= f.input :valor, :as => :string, :label => "Valor: ", :input_html => {:class => "money"} %>
    <%= f.input :data_prevista, :as => :string, :input_html => {:class =>"datepicker"}, :label => "Data Prevista: " %>
    <%= f.input :esta_pago, :as => :boolean, :label => "Está pago?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
    <%= link_to 'Cancelar', Os.find(@pagamento.os_id), :class => "btn btn-inverse" %>
  </div>
<% end %>
