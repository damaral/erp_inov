<h1>Clientes</h1>

<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Apelido</th>
    <th>Telefone</th>
    <th>Celular</th>
    <th>E-mail</th>
    <th>Observação</th>
    <th></th>
    <th>Ações</th>
    <th></th>
  </tr>

<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.nome %></td>
    <td><%= cliente.apelido %></td>
    <td><%= cliente.telefone %></td>
    <td><%= cliente.celular %></td>
    <td><%= cliente.email %></td>
    <td><%= cliente.observacao %></td>
    <td><%= link_to 'Mostrar', cliente, :class => "btn btn-mini" %></td>
    <td><%= link_to 'Editar', edit_cliente_path(cliente), :class => "btn btn-mini btn-info" %></td>
    <td><%= link_to 'Excluir', cliente, :class => "btn btn-danger btn-mini", method: :delete, data: { confirm: 'Você tem certeza que deseja excluir este cliente?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Cliente', new_cliente_path, :class => "btn btn-primary" %>
